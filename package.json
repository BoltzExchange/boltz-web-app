{
    "name": "boltz-frontend",
    "version": "1.6.2",
    "description": "Boltz Exchange, Atomic Swaps, Web App",
    "scripts": {
        "start": "npm run regtest && vite",
        "test": "vitest ./tests",
        "test:e2e": "playwright test",
        "playwright:install": "playwright install --with-deps chromium",
        "dev": "vite",
        "regtest": "cp src/configs/regtest.json public/config.json",
        "preview": "vite preview",
        "build": "./build.py && vite build; cp dist/index.html dist/404.html",
        "mainnet": "cp src/configs/mainnet.json public/config.json",
        "beta": "cp src/configs/beta.json public/config.json",
        "pro": "cp src/configs/pro.json public/config.json",
        "testnet": "cp src/configs/testnet.json public/config.json",
        "prettier": "npx prettier src public tests e2e docs *.ts *.mjs *.json",
        "prettier:write": "npm run prettier -- --write",
        "prettier:check": "npm run prettier -- --check",
        "tsc": "tsc",
        "lint": "eslint --max-warnings 0 .",
        "changelog": "git-cliff -o CHANGELOG.md"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@playwright/test": "^1.50.1",
        "@solidjs/testing-library": "^0.8.10",
        "@testing-library/user-event": "^14.6.1",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.13.9",
        "@webbtc/webln-types": "^3.0.0",
        "eslint": "^9.21.0",
        "eslint-plugin-solid": "^0.14.5",
        "git-cliff": "^2.8.0",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "sass-embedded": "^1.85.1",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0",
        "vite": "^6.2.0",
        "vite-plugin-mkcert": "^1.17.7",
        "vite-plugin-node-polyfills": "^0.23.0",
        "vite-plugin-solid": "^2.11.6",
        "vite-plugin-top-level-await": "^1.5.0",
        "vite-plugin-wasm": "^3.4.1"
    },
    "dependencies": {
        "@bitcoinerlab/secp256k1": "^1.2.0",
        "@fontsource/noto-mono": "^5.2.5",
        "@fontsource/noto-sans": "^5.2.5",
        "@ledgerhq/hw-app-eth": "^6.42.8",
        "@ledgerhq/hw-transport-webhid": "^6.30.0",
        "@reown/appkit": "^1.6.9",
        "@reown/appkit-adapter-ethers": "^1.6.9",
        "@scure/base": "^1.2.4",
        "@scure/bip32": "^1.6.2",
        "@scure/bip39": "^1.5.4",
        "@solid-primitives/i18n": "^2.2.0",
        "@solid-primitives/storage": "^4.3.1",
        "@solidjs/router": "^0.15.3",
        "@trezor/connect-web": "^9.5.0",
        "@vulpemventures/secp256k1-zkp": "^3.2.1",
        "bignumber.js": "^9.1.2 ",
        "bitcoinjs-lib": "^6.1.7",
        "bolt11": "^1.4.1",
        "boltz-bolt12": "^0.1.3",
        "boltz-core": "^2.2.2",
        "buffer": "^6.0.3",
        "create-hmac": "^1.1.7",
        "ecpair": "^2.1.0",
        "ethers": "^6.13.5",
        "iframe-resizer": "^5.3.3",
        "liquidjs-lib": "^6.0.2-liquid.37",
        "localforage": "^1.10.0",
        "loglevel": "^1.9.2",
        "qr-scanner": "^1.4.2",
        "qrcode": "^1.5.4",
        "solid-icons": "^1.1.0",
        "solid-js": "1.9.5",
        "vitest": "^3.0.7"
    }
}
