{
  "name": "boltz-frontend",
  "version": "3.0.0",
  "description": "Boltz Exchange, Atomic swaps, frontend",
  "license": "MIT",
  "scripts": {
    "start": "cp src/configs/config.regtest.js src/config.js && vite",
    "postinstall": "sed -i '1s/^/var tempDouble;var tempI64;\\n/' node_modules/@vulpemventures/secp256k1-zkp/dist/secp256k1-zkp.js",
    "dev": "vite",
    "serve": "vite preview",
    "mainnet": "cp src/configs/config.mainnet.js src/config.js; vite build; cp dist/index.html dist/404.html",
    "testnet": "cp src/configs/config.testnet.js src/config.js; vite build; cp dist/index.html dist/404.html",
    "prettier": "./node_modules/prettier/bin-prettier.js --write src",
    "prettier-check": "./node_modules/prettier/bin-prettier.js --check src"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "vite": "^4.2.1",
    "vite-plugin-node-polyfills": "^0.8.2",
    "vite-plugin-solid": "^2.6.1"
  },
  "dependencies": {
    "@noble/secp256k1": "^1.7.1",
    "@scure/base": "^1.1.1",
    "@solid-primitives/i18n": "^1.2.4",
    "@solid-primitives/storage": "^1.3.9",
    "@solidjs/router": "^0.8.2",
    "@vulpemventures/secp256k1-zkp": "^3.0.0",
    "bignumber.js": "^9.1.1",
    "boltz-core": "^0.6.2",
    "boltz-core-liquid-michael1011": "^1.0.1",
    "buffer": "^6.0.3",
    "create-hmac": "^1.1.7",
    "ecpair": "2.0.1",
    "liquidjs-lib": "^6.0.2-liquid.24",
    "loglevel": "^1.8.1",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.0",
    "solid-js": "^1.7.0"
  }
}
