{
  "name": "boltz-frontend",
  "version": "1.1.2",
  "description": "Boltz Exchange, Atomic Swaps, Web App",
  "type": "module",
  "scripts": {
    "start": "cp src/configs/config.regtest.js src/config.js && vite",
    "test": "cp src/configs/config.regtest.js src/config.js && vitest tests",
    "dev": "vite",
    "serve": "vite preview",
    "mainnet": "cp src/configs/config.mainnet.js src/config.js; vite build; cp dist/index.html dist/404.html",
    "beta": "cp src/configs/config.beta.js src/config.js; vite build; cp dist/index.html dist/404.html",
    "testnet": "cp src/configs/config.testnet.js src/config.js; vite build; cp dist/index.html dist/404.html",
    "prettier": "prettier --write src tests",
    "prettier-check": "prettier --check src tests",
    "changelog": "git-cliff -o CHANGELOG.md"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.4",
    "eventsource": "^2.0.2",
    "git-cliff": "^1.3.1",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.3",
    "vite": "^4.4.11",
    "vite-plugin-node-polyfills": "^0.15.0",
    "vite-plugin-solid": "^2.7.1",
    "vitest": "^0.31.3"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.0.5",
    "@scure/base": "^1.1.3",
    "@solid-primitives/i18n": "^2.0.0",
    "@solid-primitives/storage": "^2.1.1",
    "@solidjs/router": "^0.8.3",
    "@vulpemventures/secp256k1-zkp": "^3.1.0",
    "bignumber.js": "^9.1.2 ",
    "bitcoinjs-lib": "^6.1.5",
    "bolt11": "^1.4.1",
    "boltz-core": "^1.0.3",
    "buffer": "^6.0.3",
    "create-hmac": "^1.1.7",
    "ecpair": "^2.1.0",
    "liquidjs-lib": "^6.0.2-liquid.30",
    "loglevel": "^1.8.1",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.3",
    "solid-js": "^1.8.1"
  }
}
