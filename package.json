{
  "name": "boltz-frontend",
  "version": "3.0.0",
  "description": "Boltz Exchange, Atomic swaps, frontend",
  "license": "MIT",
  "scripts": {
    "start": "cp src/configs/config.regtest.js src/config.js && vite",
    "dev": "vite",
    "serve": "vite preview",
    "bitcoinlib": "npx browserify --standalone bitcoin - -o src/vendor/bitcoinjs-lib.js <<<\"module.exports = require(\\\"bitcoinjs-lib\\\");\"",
    "mainnet": "cp src/configs/config.mainnet.js src/config.js; vite build; cp dist/index.html dist/404.html",
    "testnet": "cp src/configs/config.testnet.js src/config.js; vite build; cp dist/index.html dist/404.html"
  },
  "devDependencies": {
    "loglevel": "^1.8.1",
    "prettier": "^2.8.4",
    "vite": "^4.2.1",
    "vite-plugin-node-polyfills": "^0.7.0",
    "vite-plugin-solid": "^2.6.1"
  },
  "dependencies": {
    "@noble/secp256k1": "^1.7.1",
    "@scure/base": "^1.1.1",
    "@solid-primitives/i18n": "^1.2.4",
    "@solid-primitives/storage": "^1.3.9",
    "@solidjs/router": "^0.8.2",
    "@vulpemventures/secp256k1-zkp": "^3.0.0",
    "boltz-core": "^0.6.2",
    "boltz-core-liquid-michael1011": "^0.5.3",
    "buffer": "^6.0.3",
    "create-hmac": "^1.1.7",
    "ecpair": "^2.1.0",
    "liquidjs-lib": "^6.0.2-liquid.24",
    "qrcode": "^1.5.0",
    "solid-js": "^1.7.0"
  }
}
