{
    "name": "boltz-frontend",
    "version": "1.2.1",
    "description": "Boltz Exchange, Atomic Swaps, Web App",
    "type": "module",
    "scripts": {
        "start": "cp src/configs/config.regtest.ts src/config.ts && vite",
        "test": "cp src/configs/config.regtest.ts src/config.ts && vitest --dir ./tests",
        "dev": "vite",
        "serve": "vite preview",
        "mainnet": "cp src/configs/config.mainnet.ts src/config.ts; vite build; cp dist/index.html dist/404.html",
        "beta": "cp src/configs/config.beta.ts src/config.ts; vite build; cp dist/index.html dist/404.html",
        "testnet": "cp src/configs/config.testnet.ts src/config.ts; vite build; cp dist/index.html dist/404.html",
        "prettier": "prettier --write src tests",
        "prettier-check": "prettier --check src tests",
        "tsc": "tsc",
        "changelog": "git-cliff -o CHANGELOG.md"
    },
    "devDependencies": {
        "@solidjs/testing-library": "^0.8.4",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "eventsource": "^2.0.2",
        "git-cliff": "^1.4.0",
        "jsdom": "^22.1.0",
        "prettier": "^3.1.1",
        "sass": "^1.69.5",
        "typescript": "^5.2.2",
        "vite": "^4.5.1",
        "vite-plugin-node-polyfills": "^0.15.0",
        "vite-plugin-solid": "^2.7.2",
        "vitest": "^0.32.4"
    },
    "dependencies": {
        "@bitcoinerlab/secp256k1": "^1.0.5",
        "@fontsource/noto-sans": "^5.0.18",
        "@scure/base": "^1.1.3",
        "@solid-primitives/i18n": "^2.0.0",
        "@solid-primitives/storage": "^2.1.1",
        "@solidjs/router": "^0.9.1",
        "@vulpemventures/secp256k1-zkp": "^3.1.0",
        "bignumber.js": "^9.1.2 ",
        "bitcoinjs-lib": "^6.1.5",
        "bolt11": "^1.4.1",
        "boltz-core": "^1.0.4",
        "buffer": "^6.0.3",
        "create-hmac": "^1.1.7",
        "ecpair": "^2.1.0",
        "ethers": "^6.8.1",
        "iframe-resizer": "^4.3.9",
        "liquidjs-lib": "^6.0.2-liquid.31",
        "loglevel": "^1.8.1",
        "qr-scanner": "^1.4.2",
        "qrcode": "^1.5.3",
        "solid-js": "^1.8.5"
    }
}
